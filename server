#include<iostream>
#include<arpa/inet.h>
#include<memory.h>

using namespace std;

int Listen(unsigned int port,int listen_lenth) {
    int sock_fd = socket(AF_INET,SOCK_STREAM,0);
    sockaddr_in sin;
    memset(&sin,0,sizeof(sockaddr_in));
    sin.sin_family = AF_INET;
    sin.sin_port = htons(port);
    sin.sin_addr.s_addr = INADDR_ANY;
    if(bind(sock_fd,(sockaddr*)&sin,sizeof(sockaddr_in)) == -1) {
        perror("bind");
    }
    listen(sock_fd,listen_lenth);
    return sock_fd;
}

void Accept() {
    int lfd = Listen(2100,10);
    sockaddr_in c_sin;
    socklen_t c_sin_size;
    int cl_fd = accept(lfd,(sockaddr*)&c_sin,&c_sin_size);
}